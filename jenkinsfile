pipeline {
  agent any

  stages {
    stage('########### Copy from Git ###########') {
      steps {
        sh 'yamllint Task1.yml'         
        }
    }
        stage('########### UP and BUILD ###########') {
      steps {
        sh 'ansible-playbook Task1.yml --syntax-check'    
        }
    }
        stage('########### Check containers status ###########') {
      steps {
        sleep 120
        sh 'ansible-lint Task1.yml'         
        }
    }    
  }
}